<UserControl x:Class="HSM2._0.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HSM2._0.Views"
             xmlns:components="clr-namespace:HSM2._0.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Login, Source={StaticResource Locator}}">
    <StackPanel>
        <Label>Login</Label>
        <TextBox Text="{Binding Username, Mode=OneWayToSource}"/>
        <Label>Hasło</Label>
        <components:BindablePasswordBox Password="{Binding Password}"/>
        <Label Content="{Binding WrondUsernameOrPassword}"/>
        <Button Command="{Binding LogInCommand}">Zaloguj</Button>
    </StackPanel>
</UserControl>
